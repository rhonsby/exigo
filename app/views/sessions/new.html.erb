<div class="container row">
  <div class="col-md-8 col-md-offset-4">
    <%= render "layouts/errors" %>

    <h1>Sign In</h1>

    <form action="<%= session_url %>" method="post" role="form">
      <%= auth_token_input %>
      <div class="form-group">
        <label for="user_email">Email</label>
          <input type="text" id="user_email"
            name="user[email]" class="form-control">
      </div>

      <div class="form-group">
        <label>Password</label>
          <input type="password" id="user_password"
            name="user[password]" class="form-control">
      </div>

      <input type="submit" class="btn btn-primary" value="Login">
      <button class='btn btn-success' id='guest-btn'>Guest Sign-In</button>
      <a href="<%= new_user_url %>">New to Exigo?</a>
    </form>
  </div>
</div>

<script type="text/javascript">
  $('#guest-btn').on('click', function (event) {
    event.preventDefault();
    $('#user_email').val('guest');
    $('#user_password').val('foobar');
    $('form').submit();
  });
</script>