<h1><%= board.escape('title') %></h1>

<div class="row">
  <div class="col-md-12" class="clearfix">
    <ul id="lists" class="clearfix">
    </ul>
  </div>
</div>

<div id="board-controls">
</div>
<button class="btn btn-danger" id="delete-button">Delete Board</button>

<script>  
    $(function() {  
      $("#lists").sortable({
        start: function (event, ui) {
          $(ui.item).addClass('dragged');
        },

        stop: function (event, ui) {
          $(ui.item).removeClass('dragged');
        }
      });  
      $("#lists").disableSelection();
    });  
</script> 
